<html>
<style>
  h1{
      font-family: Arial, Helvetica, sans-serif;
      margin-left: 50px;
  }
  header {
      display: flex;
      height: 150px;
      background: radial-gradient(circle farthest-corner at 42% 106%,#ffe17d 0%,#ffcd69 10%,#fa9137 28%,#eb4141 42%,transparent 82%) , linear-gradient(135deg,#234bd7 12%,#c33cbe 58%);
      align-items: center;
  }
  body {
      margin: 0;
  }
  img {
      width: 100px;
      height: 100px;
      background-color: white;
    }
    div {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        border-radius: 10px;
    }
    .user-info {
        background-color: white;
        width: 470px;
        height: 120px;
        margin-left: 50px;
    }
    img {
        border-radius: 50%;
        margin-left: 15px;
        margin-right: 15px;
    }
    body {
        background-color: beige;
    }
    button {
        height: 20px;
        margin-top: 24px;
    }
    input {
        margin: 0px;
    }
</style>
<body>
    <header>
    <img src="../logo.png" alt="logo-image"/>
    </header>
        <h1>Users</h1>
          
        <% users.forEach(user => { %>
        <div class ="user-info">
              <img width=100 height=100 src="/photos/<%= user.username %>/<%= user.profile %>" alt = "profile photos" />
              <form action="/images?user=<%= user.username %>" enctype="multipart/form-data" method="post">
                <input type="file" name="image"><br>
                    <a href="/feed?username=<%= user.username %>">
                <input type="submit" value="Upload" />
              </form>
            
                <input type="button" value="<%= user.username %>"/>
              </a>
            </div>
          </div>
          <% }) %>
      </body>
      </html>